# My Village Check-In Agent - Environment Variables
# Copy this file to .env and fill in your actual values

# Slack Bot Token (starts with xoxb-)
# Get this from: https://api.slack.com/apps -> Your App -> OAuth & Permissions
SLACK_BOT_TOKEN=xoxb-your-token-here

# Slack Channel ID for #coding-in-color
# Get this from: Slack -> #coding-in-color -> Click channel name -> Copy "Channel ID"
SLACK_CHANNEL_ID=C1234567890

# Server Port
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Node Environment
NODE_ENV=development
